<form
  class="ui stacked segment form"
  action="/flightCollection/{{flightCollection.id}}/addFlight"
  method="POST"
>
  <div class="four fields">
    <div class="field">
      <label for="flightNumber">Flight Number</label>
      <input
        placeholder="Flight number"
        type="text"
        name="flightNumber"
        autofocus
        required
      />
    </div>
    <div class="field">
      <label for="origin">Origin</label>
      <input placeholder="Origin" type="text" name="origin" required />
    </div>
    <div class="field">
      <label for="airline">Airline</label>
      <input placeholder="Airline" type="text" name="airline" required />
    </div>
    <div class="field">
      <label for="pilot">Pilot</label>
      <input placeholder="Pilot" type="text" name="pilot" required />
    </div>
  </div>
  <div class="three fields">
    <div class="departureDate">
      <label for="departureDate">Departure Date</label>
      <input
        placeholder="Departure Date"
        type="text"
        name="departureDate"
        required
      />
    </div>
    <div class="field">
      <label for="departureTime">Departure Time</label>
      <input
        placeholder="Departure Time"
        type="text"
        name="departureTime"
        required
      />
    </div>
    <div class="field">
      <label for="duration">Duration</label>
      <input placeholder="Duration" type="text" name="duration" required />
    </div>
  </div>
  <button class="ui blue submit button">Add Flight</button>
</form>